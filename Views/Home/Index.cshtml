@model IEnumerable<Todo.ViewModels.TodoViewModel>
@using Todo.Helpers
<!DOCTYPE html>
<html>
<head>
    <title>Backbone Demo: Todos</title>
    <link href="@Url.Content("~/Content/css/todos.css")" media="all" rel="stylesheet" type="text/css"/>
</head>
<body>
    <!-- Todo App Interface -->
    <div id="todoapp">
        <div class="title">
            <h1>Todos</h1>
        </div>
        <div class="content">
            <div id="create-todo">
                <input id="new-todo" placeholder="What needs to be done?" type="text" />
                <span class="ui-tooltip-top" style="display: none;">Press Enter to save this task</span>
            </div>
            <div id="todos">
                <ul id="todo-list"></ul>
            </div>
            <div id="todo-stats"></div>
        </div>
    </div>
    <div id="instructions">
        <a href="http://www.bitcandies.com/blog/2011/asp-net-mvc3-restful-application-tutorial-with-backbone-js-part-i/" target="_blank" title="Click to go to part 1 of the tutorial.">Based on the Asp.Net MVC RESTful application tutorial with Backbone.js</a>
        <br />
        I took the tutorial as a basis and then added in require.js and split the files into the recommended layout for a Backbone js application.
    </div>
    <div id="credits">
        Created by
        <br />
        <a href="http://jgn.me/">J&eacute;r&ocirc;me Gravel-Niquet</a>
    </div>
    
    <script data-main="/Content/js/todoApp/main" src="@Url.Content("~/Scripts/require.min.js")" type="text/javascript"></script>
</body>
</html>
